pipeline {
    agent {
        label "master"
    }
    tools {
        // Note: this should match with the tool name configured in your jenkins instance (JENKINS_URL/configureTools/)
        maven "maven3"
    }
    environment {
        // This can be nexus3 or nexus2
        NEXUS_VERSION = "nexus3"
        // This can be http or https
        NEXUS_PROTOCOL = "http"
        // Where your Nexus is running
        NEXUS_URL = "35.246.44.183:8081/repository/devops-demo-anand/"
        // http://35.246.44.183:8081/repository/devops-demo-anand/
        // Repository where we will upload the artifact
        NEXUS_REPOSITORY = "devops-demo-anand"
        // Jenkins credential id to authenticate to Nexus OSS
        NEXUS_CREDENTIAL_ID = "nexus_credentials"
    }
    stages {
        stage("clone code") {
            steps {
                script {
                    // Let's clone the source
                    git 'https://github.com/anandajothi-c/CI-with-Jenkins-in-AWS-Demo.git';
                }
            }
        }
        stage("mvn build") {
            steps {
                script {
                    // If you are using Windows then you should use "bat" step
                    // Since unit testing is out of the scope we skip them
                    sh (/mvn -Dmaven.test.failure.ignore clean package/)
                }
            }
        }
       stage("publish to nexus") {
            steps {
nexusArtifactUploader credentialsId: 'nexus_devops', groupId: 'com.test.anand', nexusUrl: 'http://35.246.44.183:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'devops-demo-anand/', version: '1.0'
                    }
                }
    }
}
